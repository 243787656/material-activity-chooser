<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.github.zawadz88.sample">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".SampleActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.github.zawadz88.activitychooser.MaterialShareActivity"
            android:theme="@style/MSPTheme" />

        <activity
            android:name=".StyledMaterialShareActivity"
            android:theme="@style/CustomShareTheme" />

        <activity
            android:name=".TrackingMaterialShareActivity"
            android:theme="@style/MSPTheme" />

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="${packageName}.FILE_PROVIDER"
            android:exported="false"
            android:grantUriPermissions="true">

            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />

        </provider>

    </application>

</manifest>