<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MACTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorPrimaryDark">@color/mac_black_40</item>
        <item name="android:windowAnimationStyle">@style/MACNoWindowAnimation</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>

        <item name="mac_bottomSheetStyle">@style/MACBottomSheet</item>
        <item name="mac_bottomSheetTitleStyle">@style/MACBottomSheetTitle</item>
        <item name="mac_bottomSheetRecyclerViewStyle">@style/MACBottomSheetRecyclerView</item>

        <item name="mac_emptyViewStyle">@style/MACEmptyView</item>
        <item name="mac_emptyViewTitleStyle">@style/MACEmptyViewTitle</item>
        <item name="mac_emptyViewButtonStyle">@style/MACEmptyViewButton</item>

        <item name="mac_activityItemStyle">@style/MACActivityItem</item>
        <item name="mac_activityItemIconStyle">@style/MACActivityItemIcon</item>
        <item name="mac_activityItemLabelStyle">@style/MACActivityItemLabel</item>

        <item name="mac_activityItemSpanCount">@integer/mac_span_count</item>
    </style>

</resources>