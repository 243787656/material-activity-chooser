<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MSPTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorPrimaryDark">@color/msp_black_40</item>
        <item name="android:windowAnimationStyle">@style/MSPNoWindowAnimation</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>

        <item name="msp_bottomSheetStyle">@style/MSPBottomSheet</item>
        <item name="msp_bottomSheetTitleStyle">@style/MSPBottomSheetTitle</item>

        <item name="msp_emptyViewStyle">@style/MSPEmptyView</item>
        <item name="msp_emptyViewTitleStyle">@style/MSPEmptyViewTitle</item>
        <item name="msp_emptyViewButtonStyle">@style/MSPEmptyViewButton</item>

        <item name="msp_activityItemStyle">@style/MSPActivityItem</item>
        <item name="msp_activityItemIconStyle">@style/MSPActivityItemIcon</item>
        <item name="msp_activityItemLabelStyle">@style/MSPActivityItemLabel</item>

        <item name="msp_activityItemSpanCount">@integer/msp_span_count</item>
    </style>

</resources>